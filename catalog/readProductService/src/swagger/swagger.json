{
  "openapi": "3.0.0",
  "info": {
    "title": "GraphQL Product Service API",
    "description": "Esta API permite interactuar con la base de datos de productos usando GraphQL. Puedes obtener detalles de productos y ejecutar consultas y mutaciones con el endpoint de GraphQL.",
    "version": "1.1.0",
    "termsOfService": "https://example.com/terms",
    "contact": {
      "name": "Soporte para Desarrolladores",
      "email": "support@example.com",
      "url": "https://example.com/support"
    },
    "license": {
      "name": "Licencia MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3006/graphql",
      "description": "Servidor local de desarrollo"
    },
    {
      "url": "https://api.example.com/graphql",
      "description": "Servidor de producción"
    }
  ],
  "paths": {
    "/graphql": {
      "post": {
        "summary": "Ejecutar consultas o mutaciones de GraphQL",
        "description": "Envía una consulta o mutación GraphQL al endpoint.",
        "requestBody": {
          "description": "Cadena de consulta o mutación GraphQL con variables opcionales.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": {
                    "type": "string",
                    "description": "Cadena de consulta o mutación GraphQL.",
                    "example": "{ listProducts { id name price image_url } }"
                  },
                  "variables": {
                    "type": "object",
                    "description": "Variables opcionales para la consulta o mutación.",
                    "example": { "id": "1" }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Respuesta exitosa de GraphQL.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GraphQLResponse"
                }
              }
            }
          },
          "400": {
            "description": "Solicitud incorrecta debido a sintaxis GraphQL inválida o campos faltantes.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/BadRequestResponse"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor debido a un problema inesperado.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/InternalServerError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "description": "Un solo producto en la base de datos.",
        "properties": {
          "id": { "type": "string", "description": "El identificador único del producto." },
          "name": { "type": "string", "description": "El nombre del producto." },
          "description": { "type": "string", "description": "Descripción detallada del producto." },
          "price": { "type": "number", "description": "El precio del producto en USD." },
          "stock": { "type": "integer", "description": "La cantidad de productos en stock." },
          "color": { "type": "string", "description": "El color del producto." },
          "size": { "type": "string", "description": "El tamaño del producto." },
          "material": { "type": "string", "description": "El material del producto." },
          "brand": { "type": "string", "description": "La marca del producto." },
          "gender": { "type": "string", "description": "El género al que está dirigido el producto." },
          "image_url": { "type": "string", "description": "URL de la imagen del producto." }
        }
      },
      "GraphQLResponse": {
        "type": "object",
        "description": "Estructura estándar de la respuesta de GraphQL.",
        "properties": {
          "data": {
            "type": "object",
            "description": "El resultado de la consulta o mutación GraphQL.",
            "properties": {
              "listProducts": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Product"
                },
                "description": "Lista de productos devueltos por la consulta."
              }
            }
          }
        },
        "example": {
          "data": {
            "listProducts": [
              { "id": "1", "name": "Producto A", "price": 100, "image_url": "http://localhost:3006/products/1.jpg" },
              { "id": "2", "name": "Producto B", "price": 200, "image_url": "http://localhost:3006/products/2.jpg" }
            ]
          }
        }
      }
    },
    "responses": {
      "BadRequestResponse": {
        "type": "object",
        "description": "Respuesta de error por sintaxis GraphQL inválida o campos faltantes.",
        "properties": {
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Sintaxis de consulta GraphQL inválida."
                }
              }
            }
          },
          "data": { "type": "null", "example": null }
        }
      },
      "InternalServerError": {
        "type": "object",
        "description": "Respuesta de error para problemas internos del servidor.",
        "properties": {
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Error interno del servidor."
                }
              }
            }
          }
        }
      }
    }
  }
}
